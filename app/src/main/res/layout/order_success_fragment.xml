<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_waiter"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@id/tv_checkout"
            android:layout_centerInParent="true"
            android:src="@drawable/waiter" />

        <TextView
            android:id="@+id/tv_checkout"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/order_sucess"
            android:textSize="17dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/btn_order_detail"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/img_checkout_failed"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/tv_checkout"
            android:layout_centerInParent="true"
            android:src="@drawable/checkbox_faled"/>

        <ImageView
            android:id="@+id/img_checkout_success"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/tv_checkout"
            android:layout_centerInParent="true"
            android:layout_above="@id/img_checkout_failed"
            android:src="@drawable/checkbox"/>

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pergi ke Dashboard     "
            android:layout_below="@id/img_waiter"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:textSize="15sp"
            android:background="@drawable/curved_layout"
            android:drawableLeft="@drawable/checkbox"/>

    </RelativeLayout>

</layout>