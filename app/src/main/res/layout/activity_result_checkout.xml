<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.detail.ResultCheckoutActivity">

<RelativeLayout
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_waiter"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_below="@id/tv_checkout"
        android:layout_centerInParent="true"
        android:src="@drawable/waiter" />

    <Button
        android:id="@+id/btn_order_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Detail Order   "
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:background="@drawable/curved_layout_coloraccent"/>

    <TextView
        android:id="@+id/tv_checkout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/checkout_result"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/btn_order_detail"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img_checkout_failed"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/tv_checkout"
        android:layout_centerInParent="true"
        android:src="@drawable/checkbox_faled"/>

    <ImageView
        android:id="@+id/img_checkout_success"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/tv_checkout"
        android:layout_centerInParent="true"
        android:layout_above="@id/img_checkout_failed"
        android:src="@drawable/checkbox"/>

    <TextView
        android:id="@+id/tv_tombol_konfirmasi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/tombol_konfirmasi"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/img_waiter"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"/>

    <Button
        android:id="@+id/btn_konfirmasi_pembayaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Pembayaran  "
        android:layout_below="@id/tv_tombol_konfirmasi"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:textSize="15sp"
        android:background="@drawable/curved_layout"
        android:drawableLeft="@drawable/checkbox"/>

</RelativeLayout>

</layout>