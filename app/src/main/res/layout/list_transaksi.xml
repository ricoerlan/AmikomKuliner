<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp">

            <ImageView
                android:id="@+id/img_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/checkbox"/>

            <TextView
                android:id="@+id/tv_nama_resto_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama resto"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_toEndOf="@id/img_transaksi"
                android:layout_marginHorizontal="2dp" />

            <TextView
                android:id="@+id/tv_nama_pemesan_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pemesan"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_toEndOf="@id/img_transaksi"
                android:layout_below="@id/tv_nama_resto_transaksi"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="5dp"/>

<!--            <TextView-->
<!--                android:id="@+id/tv_no_meja_transaksi"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="69"-->
<!--                android:textColor="#000"-->
<!--                android:textSize="15sp"-->
<!--                android:layout_toEndOf="@id/tv_nama_pemesan_transaksi"-->
<!--                android:layout_below="@id/tv_nama_resto_transaksi"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:layout_marginTop="5dp"/>-->

            <TextView
                android:id="@+id/tv_tanggal_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textColor="#000"
                android:textSize="10sp"
                android:layout_toEndOf="@id/img_transaksi"
                android:layout_below="@id/tv_nama_pemesan_transaksi"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_status_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="status transaksi"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="2dp"/>

            <TextView
                android:id="@+id/tv_total_harga_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="total harga"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_marginEnd="15dp"
                android:layout_below="@id/tv_status_transaksi"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>